<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LightFy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Define uma fonte padrão para todo o aplicativo e passa por cima de tudas tambem -->
        <item name="fontFamily">@font/comic_neue_bold</item>

        <!-- Fonte Titulo Principal -->
        <item name="fntMainTitle">@font/comic_neue_bold</item>

        <!-- Cores do sistema -->
        <item name="clrMainScreen">@color/white_system</item>
        <item name="clrText">@color/darkGray</item>
        <item name="clrHint">@color/lightGray</item>

        <!-- Cores scrollView dados websocket -->
        <item name="clrScrViw_Background">@color/WHITE</item>
        <item name="clrScrViw_Border">@color/blue_system</item>

        <!-- Cores botão padrão -->
        <item name="clrStdBtn_Border">@color/blue_system</item>
        <item name="clrStdBtn_Background">@color/WHITE</item>
        <item name="clrStdBtn_Text">@color/blue_system</item>

        <!-- Cores botão configuração wifi -->
        <item name="clrBtnConfig_Border">@color/blue_system</item>
        <item name="clrBtnConfig_Background">@color/WHITE</item>
        <item name="clrBtnConfig_Text">@color/blue_system</item>
        <item name="clrBtnConfig_RippleColor">@color/light_blue_system</item>

        <!-- Cor label configuração wifi -->
        <item name="clrLblConfigWiFi">@color/blue_system</item>

        <!-- Cor do painel dos dados wi-fi -->
        <item name="clrPanelConfigWiFi">@color/WHITE</item>
    </style>

    <style name="Theme.LightFy" parent="Base.Theme.LightFy" />
</resources>