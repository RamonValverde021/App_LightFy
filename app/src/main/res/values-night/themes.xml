<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LightFy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <!-- Define uma fonte padrão para todo o aplicativo e passa por cima de tudas tambem -->
        <item name="fontFamily">@font/tektur</item>

        <!-- Fonte Titulo Principal -->
        <item name="fntMainTitle">@font/tektur_medium</item>

        <!-- Cores do sistema -->
        <item name="clrMainScreen">@color/BLACK</item>
        <item name="clrText">@color/WHITE</item>
        <item name="clrHint">@color/lightGray</item>

        <!-- Cores scrollView dados websocket -->
        <item name="clrScrViw_Background">@color/BLACK</item>
        <item name="clrScrViw_Border">@color/green_system</item>

        <!-- Cores botão padrão -->
        <item name="clrStdBtn_Border">@color/WHITE</item>
        <item name="clrStdBtn_Background">@color/green_system</item>
        <item name="clrStdBtn_Text">@color/WHITE</item>

        <!-- Cores botão configuração wifi -->
        <item name="clrBtnConfig_Border">@color/green_system</item>
        <item name="clrBtnConfig_Background">@color/BLACK</item>
        <item name="clrBtnConfig_Text">@color/green_system</item>
        <item name="clrBtnConfig_RippleColor">@color/light_green_system</item>

        <!-- Cor label configuração wifi -->
        <item name="clrLblConfigWiFi">@color/green_system</item>

        <!-- Cor do painel dos dados wi-fi -->
        <item name="clrPanelConfigWiFi">@color/black_system</item>
    </style>

</resources>